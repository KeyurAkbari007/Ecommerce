@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
@using System.Data;
@model DataTable;
<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-lg-8">
            <div class="row">
                <!-- Products Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card abed-card border-5 border-info border-top rounded">
                        <div class="card-body">
                            <h5 class="card-title">Products <span>|</span></h5>
                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center text-info bg-info-subtle">
                                    <i class="fa-brands fa-product-hunt"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.DashboardData["ProductCount"]</h6>
                                </div>
                            </div>
                            <hr style="color:aqua" />
                            <a asp-area="AdminProducts" asp-controller="AdminProducts" asp-action="Index" class="text-info">View Details <i class="bi bi-arrow-right-circle-fill"></i></a>
                        </div>
                    </div>
                </div>
                <!-- end Products Card -->
                <!-- Category Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card abed-card border-5 border-info border-top rounded">
                        <div class="card-body">
                            <h5 class="card-title">Categories <span>|</span></h5>
                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center text-info bg-info-subtle">
                                    <i class="fa-solid fa-list"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.DashboardData["CategoryCount"]</h6>
                                </div>
                            </div>
                            <hr style="color:aqua" />
                            <a asp-area="AdminCategories" asp-controller="AdminCategories" asp-action="Admin_Categories" class="text-info">View Details <i class="bi bi-arrow-right-circle-fill"></i></a>
                        </div>
                    </div>
                </div>
                <!--  end Category Card -->
                <!-- User Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card abed-card border-5 border-info border-top rounded">
                        <div class="card-body">
                            <h5 class="card-title">Users <span>|</span></h5>
                            <div class="d-flex align-items-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center text-info bg-info-subtle">
                                    <i class="fa-solid fa-user"></i>
                                </div>
                                <div class="ps-3">
                                    <h6>@ViewBag.DashboardData["UserCount"]</h6>
                                </div>
                            </div>
                            <hr style="color:aqua" />
                            @*<a asp-area="MST_Room" asp-controller="MST_Room" asp-action="Index" class="text-info">View Details <i class="bi bi-arrow-right-circle-fill"></i></a>*@
                        </div>
                    </div>
                </div>
                <!-- End User Card -->

            </div>
        </div><!-- End Left side columns -->
    </div>
</section>

<hr />
<div class="section" style="background-color:white; height:100%;padding:20px;box-shadow: 0px 2px 20px rgba(1, 41, 112, 0.1);">
    <h5><i class="fa-solid fa-gears"></i> Modifications </h5>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>RECORD NO.</th>
                <th>TABLE NAME</th>
                <th>OPERATION</th>
                <th>DATE</th>
                <th>STATUS</th>         
            </tr>
        </thead>

        <tbody id="sample_2">
            @foreach (DataRow obj in Model.Rows)
            {
                <tr>
                    <td>@obj["RecordID"]</td>
                    <td>@obj["TableName"]</td>
                    <td class="font-weight-bold" style="font-weight:bold">@obj["Operation"]</td>
                    <td>@Convert.ToDateTime(obj["OperationTime"]).ToString("dd-MM-yyyy")</td>
                    @if ((bool)@obj["isDone"])
                    {
                        <td class="text-success font-weight-bold" style="font-weight:bold"><i class="fa fa-check" aria-hidden="true"></i> Done </td>
                    }
                    else
                    {
                        <td class="text-danger font-weight-bold" style="font-weight:bold"><i class="fa fa-times" aria-hidden="true"></i> Not Done </td>
                    }
                   
                </tr>
            }
        </tbody>
    </table>
</div>